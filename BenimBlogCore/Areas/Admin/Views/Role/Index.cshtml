@using BenimBlogCore.Models.Entity
@model List<UygulamaRolu>
@{
    ViewData["Title"] = "Index";

    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Roller Tablosu  </h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="#" class="dropdown-item">Config option 1</a>
                    </li>
                    <li>
                        <a href="#" class="dropdown-item">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Rolü</th>                      
                        <th>Sil</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>                                                   
                            <td><a href="/Admin/Role/RolSil/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Admin/Role/RolGüncelle/@item.Id" class="btn btn-outline-warning">Düzenle</a></td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
          <a href="/Admin/Role/RolEkle/" class="btn btn-primary">Yeni Rol Ekle</a>
          <a href="/Admin/Role/KullanıcıRolListe/" class="btn btn-primary">Rol Ata</a>
</div>
