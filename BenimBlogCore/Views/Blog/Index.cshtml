@using BenimBlogCore.Models.Entity
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Blog_Layout.cshtml";
}



<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Bloglar</h3>
		<div class="inner-sec">
			<!--left-->
			<div class="left-blog-info-w3layouts-agileits text-left">
				<div class="row">
					@foreach (var item in Model)
					{
						<div class="col-lg-4 card">
							<a href="/Blog/BlogDetay/@item.BlogID">
								<img src="@item.BlogResim" class="card-img-top img-fluid" alt="">
							</a>
							<div class="card-body">
								<ul class="blog-icons my-4">
									<li>
										<a href="#">
											<i class="far fa-calendar-alt"></i> @(((DateTime)item.BlogTarih).ToString("dd-MMM-yyyy"))
										</a>
									</li>
									<li class="mx-2">
										<a href="#">
											<i class="far fa-comment"></i> @item.Kategori.KategoriAdı
										</a>
									</li>
									<li>
										<a href="#">
											<i class="fas fa-eye"></i>0
										</a>
									</li>

								</ul>
								<h5 class="card-title">
									<a href="/Blog/BlogDetay/@item.BlogID">@item.BlogBaslık</a>
								</h5>
								<p class="card-text mb-3">

									@item.Blogİcerik.Substring(0,Math.Min(item.Blogİcerik.Length,100))...
									@* @item.Blogİcerik.Substring(0,item.Blogİcerik.Substring(0,100)).LastIndexOf(" ")...*@ </p>
								<a href="/Blog/BlogDetay/@item.BlogID" class="btn btn-primary read-m">Devamını oku...</a>
							</div>
						</div>
					}
					
					
					
				</div>
				<!--//left-->
			</div>
		</div>
	</div>
</section>