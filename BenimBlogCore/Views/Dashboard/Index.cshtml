@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Yazar_Layout.cshtml";
}




<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
            <i class="mdi mdi-home"></i>
        </span> Dashboard
    </h3>

</div>
<div class="row">
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-danger card-img-holder text-white">
            <div class="card-body">
                <img src="~/YazarPaneli/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Toplam Blog Sayısı <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.blg</h2>
                <h6 class="card-text">BenimBlogCore</h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-info card-img-holder text-white">
            <div class="card-body">
                <img src="66" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Sizin Blog Sayınız <i class="mdi mdi-bookmark-outline mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.yzr</h2>
                <h6 class="card-text">BenimBlogCore</h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-success card-img-holder text-white">
            <div class="card-body">
                <img src="~/YazarPaneli/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Toplam Kategori Sayısı <i class="mdi mdi-diamond mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5"> @ViewBag.ktg</h2>
                <h6 class="card-text">BenimBlogCore</h6>
            </div>
        </div>
    </div>
</div>



@await Component.InvokeAsync("BlogListesiDashboard")

@await Component.InvokeAsync("YazarHakkındaDashboard")

@await Component.InvokeAsync("DashboardKategoriListesi")


<script src="~/YazarPaneli/assets/vendors/js/vendor.bundle.base.js"></script>

<script src="~/YazarPaneli/assets/vendors/chart.js/Chart.min.js"></script>

<script src="~/YazarPaneli/assets/js/off-canvas.js"></script>
<script src="~/YazarPaneli/assets/js/hoverable-collapse.js"></script>
<script src="~/YazarPaneli/assets/js/misc.js"></script>

<script src="~/YazarPaneli/assets/js/dashboard.js"></script>
<script src="~/YazarPaneli/assets/js/todolist.js"></script>

