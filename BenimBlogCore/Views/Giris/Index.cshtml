@model BenimBlogCore.Models.Entity.KullanıcıGirisModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Blog_Layout.cshtml";
}



<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle"> Giriş Yap</h3>
		<div class="row inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				<form  asp-action="Index" method="post">
					<div asp-validation-summary="All" class="text-danger"></div>
					<div class="form-group">
						<label >Kullanıcı adınız</label>
						<input type="text" asp-for="kullanıcıadı" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" >
						<span asp-validation-for="kullanıcıadı" class="text-danger"></span>
						<div></div>
					</div>
					<div class="form-group">
						<label >Şifre</label>
						<input type="password" asp-for="sifre" class="form-control" id="exampleInputPassword1" >
						<span asp-validation-for="sifre" class="text-danger"></span>
					</div>

					<button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
					<p><a href="/Kayıt/Index"> Bir hesabın yok mu?</a></p>
				</form>
			</div>
		</div>
	</div>
</section>


