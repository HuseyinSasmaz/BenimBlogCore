@using BenimBlogCore.Models.Entity
@model List<Hakkımızda>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Blog_Layout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Hakkımzda</h3>
		<div class="row inner-sec">
			<!--left-->
			<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
				<div class="blog-grid-top">

					<div class="blog_info_left_grid">
						<a href="single.html">
							<img src="~/BlogDemo/images/b5.jpg" class="img-fluid" alt="">
						</a>
					</div>
					<h3>
						Biz kimiz & Misyonumuz & Vizyonumuz
					</h3>
					@foreach (var item in Model)
					{
						<p>
							@item.HakkımızdaDetaylar1
						</p>

					}
					
				</div>

			</div>
			<!--//left-->
			<!--right-->
			<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
				<div class="right-blog-info text-left">
					<div class="tech-btm">
						<img src="~/BlogDemo/images/banner1.jpg" class="img-fluid" alt="">
					</div>
					<div class="tech-btm">

						@await Html.PartialAsync("~/Views/HaberBulteni/AboneOl.cshtml")



					</div>

					<div class="tech-btm">
						

						@await Component.InvokeAsync("SonYazılar")


						@await Component.InvokeAsync("KategoriListesi")
					</div>
				</div>

			</aside>
			<!--//right-->
		</div>
	</div>
</section>
