@model BenimBlogCore.Models.Entity.KullanıcıKayıdModel
@{
    Layout = null;
}


<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<body>

    <div class="container mt-3">
        <h2>Yazar Kayıt</h2>
        <form asp-action="Kayıt" method="post">
            <div asp-validation-summary="All"></div>
            <div class="mb-3 mt-3">
                
                <label >Adınız Soyadınız</label>
                <input type="text" class="form-control" id="email" asp-for="AdıSoyadı">
                <span asp-validation-for="AdıSoyadı" class="text-denger"></span>
            </div>
            <div class="mb-3 mt-3">
                <span asp-validation-for="KullanıcıAdı"></span>
                <label >Kullanıcı Adınız</label>
                <input type="text" class="form-control" id="email" asp-for="KullanıcıAdı">
                <span asp-validation-for="KullanıcıAdı" class="text-denger"></span>
            </div>
            <div class="mb-3 mt-3">
               
                <label >Email</label>
                <input type="email" class="form-control" id="email" asp-for="Mail">
                <span asp-validation-for="Mail" class="text-denger"></span>
            </div>
            <div class="mb-3">
                
                <label >Şifre</label>
                <input type="password" class="form-control" id="pwd" asp-for="Sifre">
                <span asp-validation-for="Sifre" class="text-denger"></span>
            </div>
            <div class="mb-3">
                
                <label >Şifre tekrarı</label>
                <input type="password" class="form-control" id="pwd" asp-for="SifreTekrarı">
                <span asp-validation-for="SifreTekrarı" class="text-denger"></span>
            </div>
           
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>

</body>


