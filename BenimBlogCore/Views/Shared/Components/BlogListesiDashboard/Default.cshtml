@using BenimBlogCore.Models.Entity
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 7 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.BlogResim" class="mr-2" alt="image"> 
                                    </td>
                                    <td> @item.BlogBaslık </td>
                                   
                                    <td>
                                        <label class="badge badge-gradient-success">@item.Kategori.KategoriAdı </label>
                                    </td>
                                    <td>@(((DateTime)item.BlogTarih).ToString("dd-MMM-yyyy"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>