@using BenimBlogCore.Models.Entity
@model List<Blog>
<div class="tech-btm">
	<h4> Son Yazılar</h4>
	@foreach (var item in Model)
	{
		<div class="blog-grids row mb-3">
			<div class="col-md-5 blog-grid-left">
				<a href="/Blog/BlogDetay/@item.BlogID/">
					<img src=@item.BlogResim class="img-fluid" alt="">
				</a>
			</div>
			<div class="col-md-7 blog-grid-right">

				<h4>
					<a href="/Blog/BlogDetay/@item.BlogID/">@item.BlogBaslık </a>
				</h4>
				<h5>
					<a href="/Blog/BlogDetay/@item.BlogID/">@item.Blogİcerik.Substring(0, item.Blogİcerik.Substring(0,50).LastIndexOf(" "))... </a>
				</h5>
				<div class="sub-meta">
					<span>
						<i class="far fa-clock"></i> @(((DateTime)item.BlogTarih).ToString("dd-MMM-yyyy"))
					</span>
				</div>
			</div>

		</div>
	}		
	
</div>